		inactive_workspace #000000 #000000 #888888
		urgent_workspace   #2F343A #C72802 #FFFFFF
		binding_mode       #2F343A #C72802 #FFFFFF
	}
	font pango:Roboto,FontAwesome 15
	position top
        status_command ~/.barry/barry
}

